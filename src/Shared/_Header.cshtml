        <div class="dropdown">
            <button class="dropbtn">
                Rooms
                <i class="fa fa-caret-down"></i>
            </button>
            <div class="dropdown-content">
                <a href="/rooms/AllRooms">List of rooms</a>
                <a href="/rooms/rat-owners">Room for rat owners</a>
                <a href="/rooms/available">Rooms with free spaces</a>
                <a href="/rooms/NewRoom">Add new room</a>
                <a href="/rooms/DeleteRoom">Delete room</a>
                <a href="/rooms/RenovateRoom">Renovate room</a>
                <a href="/rooms/PutToRoom">Move student to a room</a>
